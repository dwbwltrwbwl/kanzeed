<Page x:Class="kanzeed.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kanzeed.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Авторизация"
      Background="#F8F9FA">

    <Grid>
        <!-- Основной контейнер - увеличен по высоте -->
        <Border Width="400" Height="650" 
                Background="White"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Иконка и заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,25">
                    <!-- Новый логотип Канцеед -->
                    <Border Width="80" Height="80" 
                            Background="#4361EE" 
                            CornerRadius="40"
                            Margin="0,0,0,15">
                        <Viewbox Width="45" Height="45">
                            <Canvas Width="32" Height="32">
                                <!-- Стилизованная буква K -->
                                <Path Data="M8,2 L8,30 M8,16 L20,2 M8,16 L20,30" 
                                      Stroke="White" 
                                      StrokeThickness="3"/>
                                <!-- Канцелярские элементы -->
                                <Ellipse Canvas.Left="22" Canvas.Top="5" 
                                         Width="6" Height="6" 
                                         Fill="White"/>
                                <Rectangle Canvas.Left="25" Canvas.Top="20" 
                                           Width="4" Height="10" 
                                           Fill="White" 
                                           RadiusX="1" RadiusY="1"/>
                            </Canvas>
                        </Viewbox>
                    </Border>

                    <TextBlock Text="КАНЦЕЕД" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Добро пожаловать!" 
                               FontSize="14" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Поле ввода Email -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Email" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <TextBox x:Name="EmailTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="15,0,40,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center" MaxLength="50">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Поле ввода Пароля -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Пароль" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>

                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <PasswordBox x:Name="PasswordBox" 
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Padding="15,0,75,0"
                                         FontSize="14"
                                         Foreground="#333333"
                                         VerticalContentAlignment="Center" MaxLength="50">
                                <PasswordBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                                </PasswordBox.InputBindings>
                            </PasswordBox>

                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Кнопка Войти -->
                <Button Grid.Row="4"
                        Content="Войти"
                        Height="48"
                        Background="#4361EE"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4361EE"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A56D4"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Разделитель -->
                <Grid Grid.Row="5" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Height="1" 
                            Background="#EEEEEE" 
                            VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" 
                               Text="или" 
                               Foreground="#888888" 
                               FontSize="12"
                               Margin="15,0"/>

                    <Border Grid.Column="2" 
                            Height="1" 
                            Background="#EEEEEE" 
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Кнопка Войти как гость -->
                <Button Grid.Row="6"
                        Content="Войти как гость"
                        Height="48"
                        Background="Transparent"
                        Foreground="#4361EE"
                        FontSize="14"
                        BorderThickness="1"
                        BorderBrush="#4361EE"
                        Cursor="Hand"
                        Margin="0,0,0,20"
                        Click="GuestLoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#4361EE"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F3FF"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Регистрация - теперь точно видно -->
                <StackPanel Grid.Row="7" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,10">
                    <TextBlock Text="Нет аккаунта? " 
                               FontSize="13" 
                               Foreground="#666666"/>
                    <TextBlock Text="Зарегистрироваться" 
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#4361EE"
                               Cursor="Hand"
                               MouseDown="Register_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#4361EE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#3A56D4"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>