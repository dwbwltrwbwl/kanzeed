<Page x:Class="kanzeed.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kanzeed.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
      Title="Регистрация"
      Background="#F8F9FA">

    <Grid>
        <!-- Основной контейнер - увеличен по ширине -->
        <Border Width="500" Height="700" 
                Background="White"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Иконка и заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">

                    <TextBlock Text="КАНЦЕЕД" 
                               FontSize="26" 
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Создание аккаунта" 
                               FontSize="14" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- ФИО в одну строку - увеличены промежутки -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Фамилия -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Фамилия" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#444444"
                                   Margin="0,0,0,5"/>
                        <Border CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#DDDDDD"
                                Background="#F8F9FA"
                                Height="45">
                            <TextBox x:Name="LastNameTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Имя -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Имя" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#444444"
                                   Margin="0,0,0,5"/>
                        <Border CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#DDDDDD"
                                Background="#F8F9FA"
                                Height="45">
                            <TextBox x:Name="FirstNameTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Отчество -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Отчество" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#444444"
                                   Margin="0,0,0,5"/>
                        <Border CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#DDDDDD"
                                Background="#F8F9FA"
                                Height="45">
                            <TextBox x:Name="MiddleNameTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Email -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Email" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <TextBox x:Name="EmailTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12,0,40,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Телефон -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Телефон" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <TextBox x:Name="PhoneTextBox" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="12,0,40,0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     Text=""
                                     VerticalContentAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Пароль -->
                <StackPanel Grid.Row="4" Margin="0,0,0,15">
                    <TextBlock Text="Пароль" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <PasswordBox x:Name="PasswordBox" 
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Padding="12,0,75,0"
                                         FontSize="14"
                                         Foreground="#333333"
                                         VerticalContentAlignment="Center"/>
                            <Button x:Name="TogglePasswordButton"
                                    Content="👁"
                                    FontSize="12"
                                    Foreground="#888888"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="30"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,12,0"
                                    Click="TogglePasswordButton_Click"
                                    Cursor="Hand"
                                    Padding="0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Подтверждение пароля -->
                <StackPanel Grid.Row="5" Margin="0,0,0,20">
                    <TextBlock Text="Подтверждение пароля" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="#444444"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDDDDD"
                            Background="#F8F9FA"
                            Height="45">
                        <Grid>
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Padding="12,0,75,0"
                                         FontSize="14"
                                         Foreground="#333333"
                                         VerticalContentAlignment="Center"/>
                            <Button x:Name="ToggleConfirmPasswordButton"
                                    Content="👁"
                                    FontSize="12"
                                    Foreground="#888888"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="30"
                                    Height="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,12,0"
                                    Click="ToggleConfirmPasswordButton_Click"
                                    Cursor="Hand"
                                    Padding="0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Кнопка регистрации -->
                <Button Grid.Row="7"
                        Content="Зарегистрироваться"
                        Height="50"
                        Background="#4361EE"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20"
                        Click="RegisterButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4361EE"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A56D4"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Разделитель -->
                <Grid Grid.Row="8" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Height="1" 
                            Background="#EEEEEE" 
                            VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" 
                               Text="или" 
                               Foreground="#888888" 
                               FontSize="12"
                               Margin="15,0"/>

                    <Border Grid.Column="2" 
                            Height="1" 
                            Background="#EEEEEE" 
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Уже есть аккаунт -->
                <StackPanel Grid.Row="9" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,10,0,0">
                    <TextBlock Text="Уже есть аккаунт? " 
                               FontSize="13" 
                               Foreground="#666666"/>
                    <TextBlock Text="Войти" 
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#4361EE"
                               Cursor="Hand"
                               MouseDown="LoginLink_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#4361EE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#3A56D4"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <!-- Стили в ресурсах -->
    <Page.Resources>
        <Style x:Key="SocialButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
</Page>