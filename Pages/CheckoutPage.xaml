<Page x:Class="kanzeed.Pages.CheckoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Оформление заказа"
      Background="#F8F9FA">

    <Page.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4361EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A56D4"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4361EE"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4361EE"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="White" CornerRadius="12" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="📝 ОФОРМЛЕНИЕ ЗАКАЗА"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="Заполните данные для завершения покупки"
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- CONTENT -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ЛЕВАЯ КОЛОНКА: ФОРМА -->
                    <StackPanel Margin="0,0,20,0">
                        <!-- Адрес доставки -->
                        <TextBlock Text="Адрес доставки *" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <!-- Выбор адреса -->
                        <ComboBox x:Name="AddressComboBox"
                                  Height="40"
                                  FontSize="14"
                                  Padding="12,0"
                                  Margin="0,0,0,20"/>

                        <!-- Если нет адресов -->
                        <TextBlock x:Name="NoAddressText"
                                   Text="У вас нет сохранённых адресов. Пожалуйста, добавьте адрес в личном кабинете."
                                   FontSize="13"
                                   Foreground="#FF4444"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,20"/>

                        <!-- Способ оплаты -->
                        <TextBlock Text="Способ оплаты *" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <StackPanel>
                            <RadioButton x:Name="CashRadio" 
                                         Content="Наличными при получении" 
                                         GroupName="Payment" 
                                         IsChecked="True"
                                         Margin="0,0,0,5"/>
                            <RadioButton x:Name="CardRadio" 
                                         Content="Банковской картой онлайн" 
                                         GroupName="Payment"
                                         Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Комментарий -->
                        <TextBlock Text="Комментарий к заказу" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <TextBox x:Name="CommentTextBox"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="14"
                                 Padding="12"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- ПРАВАЯ КОЛОНКА: ИТОГО И ТОВАРЫ -->
                    <Border Grid.Column="1" 
                            Background="#F8F9FA" 
                            CornerRadius="8" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Ваш заказ" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <!-- Список товаров в миниатюре -->
                            <ListView x:Name="CheckoutItemsList"
                                      MaxHeight="200"
                                      BorderThickness="0"
                                      Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Quantity}" 
                                                       FontSize="12"
                                                       Foreground="#666"/>

                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding ProductName}" 
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding LineTotal, StringFormat={}{0} ₽}" 
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Separator Margin="0,10"/>

                            <!-- Итоговая сумма -->
                            <StackPanel>
                                <Grid Margin="0,5">
                                    <TextBlock Text="Товары" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="ItemsSubtotalText" 
                                               Text="0 ₽" 
                                               FontSize="13" 
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <TextBlock Text="Доставка" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="DeliveryCostText" 
                                               Text="0 ₽" 
                                               FontSize="13" 
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Separator Margin="0,10"/>

                                <Grid>
                                    <TextBlock Text="ИТОГО" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="TotalAmountText" 
                                               Text="0 ₽" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- FOOTER -->
                <Border Grid.Row="2"
                        Margin="0,15,0,0"
                        Padding="15,0"
                        Background="Transparent">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="← Вернуться в корзину"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="BackToCart_Click"/>

                        <Button Grid.Column="1"
                                Content="Подтвердить заказ →"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ConfirmOrder_Click"
                                MinWidth="160"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>