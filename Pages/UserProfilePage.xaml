<Page x:Class="kanzeed.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:kanzeed.Pages"
      Title="Личный кабинет"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- Копия стилей, если их нет в App.xaml -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4361EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4361EE"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4361EE"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: basic user card -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" BorderBrush="#EEEEEE" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Ellipse Width="56" Height="56" Fill="#4361EE" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock x:Name="NameText" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock x:Name="RoleText" FontSize="12" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Email" FontSize="12" Foreground="#888"/>
                    <TextBlock x:Name="EmailText" FontSize="13" Margin="0,2,0,8"/>
                    <TextBlock Text="Телефон" FontSize="12" Foreground="#888"/>
                    <TextBlock x:Name="PhoneText" FontSize="13" Margin="0,2,0,8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button x:Name="EditProfileBtn" Content="Редактировать профиль" Style="{StaticResource SecondaryButtonStyle}" Click="EditProfileBtn_Click"/>
                    <Button Content="Выйти" Style="{StaticResource PrimaryButtonStyle}" Click="LogoutBtn_Click"/>
                </StackPanel>

                <!-- Manager/Admin quick actions -->
                <StackPanel Margin="0,18,0,0">
                    <TextBlock Text="Управление" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Vertical" x:Name="AdminActions" Visibility="Collapsed">
                        <Button Content="Просмотреть таблицы (Manager)" Click="OpenTables_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                        <Button Content="Управление пользователями (Admin)" Click="ManageUsers_Click" Style="{StaticResource SecondaryButtonStyle}" Visibility="Collapsed" x:Name="ManageUsersBtn"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right: tabs: orders, addresses, settings -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="16" BorderBrush="#EEEEEE" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0" x:Name="ProfileTabs">
                    <TabItem Header="Заказы" x:Name="OrdersTab">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="История заказов" FontSize="14" FontWeight="SemiBold" Margin="8"/>
                            <ListView x:Name="OrdersList" Grid.Row="1" Margin="8" SelectionMode="Single">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="№" DisplayMemberBinding="{Binding order_id}" Width="60"/>
                                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding order_date}" Width="140"/>
                                        <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding total_amount}" Width="100"/>
                                        <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding ORDER_STATUSES.status_name}" Width="150"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Адреса">
                        <StackPanel Margin="8">
                            <TextBlock Text="Адреса доставки в профиле" FontSize="13" Foreground="#666" Margin="0,0,0,8"/>
                            <ListView x:Name="AddressesList">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding city}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding street}" FontSize="12" Foreground="#666"/>
                                            <TextBlock Text="{Binding postal_code}" FontSize="11" Foreground="#999"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Настройки">
                        <StackPanel Margin="8">
                            <TextBlock Text="Изменение пароля" FontSize="13" Margin="0,0,0,8"/>
                            <PasswordBox x:Name="NewPasswordBox" Width="220" Margin="0,0,0,8" />
                            <PasswordBox x:Name="ConfirmPasswordBox" Width="220" Margin="0,0,0,12" />
                            <Button Content="Сохранить пароль" Click="SavePassword_Click" Style="{StaticResource PrimaryButtonStyle}" Width="150"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Page>
