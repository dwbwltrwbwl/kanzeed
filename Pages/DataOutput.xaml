<Page x:Class="kanzeed.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:kanzeed.Pages"
      xmlns:data="clr-namespace:kanzeed.ApplicationData"
      mc:Ignorable="d"
      Title="Каталог товаров"
      Background="#F8F9FA"
      Loaded="Window_Loaded">

    <Page.Resources>
        <!-- Стили (как у вас) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4361EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A56D4"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4361EE"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4361EE"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Конвертер -->
        <local:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
        
    </Page.Resources>

    <Grid>
        <Border Background="White" CornerRadius="12" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- icon + title omitted for brevity (как у вас) -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="КАТАЛОГ ТОВАРОВ" FontSize="20" FontWeight="Bold" Foreground="#333333"/>
                            <TextBlock Text="Просмотр и управление товарами" FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Корзина — только для Клиента (role_id == 1) -->
                            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Padding="10,0" Click="ViewCartButton_Click"
                                        Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=Cart}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🛒" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="CartCountText" Text="Корзина (0)"/>
                                </StackPanel>
                            </Button>

                            <!-- Таблицы — менеджер и админ -->
                            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Padding="10,0" Click="ViewTablesButton_Click"
                                        Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=ViewTables}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" Margin="0,0,5,0"/>
                                    <TextBlock Text="Таблицы"/>
                                </StackPanel>
                            </Button>

                            <!-- Управление пользователями — только админ -->
                            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Padding="10,0" Click="ViewUsersButton_Click"
                                        Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=ManageUsers}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" Margin="0,0,5,0"/>
                                    <TextBlock Text="Пользователи"/>
                                </StackPanel>
                            </Button>

                            <!-- Информация о пользователе (видна всегда) -->
                            <Button Style="{StaticResource SecondaryButtonStyle}" Click="UserProfileButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="28" Height="28" Fill="#4361EE" Margin="0,0,8,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Пользователь" FontSize="12" FontWeight="Medium"/>
                                        <TextBlock Text="Личный кабинет" FontSize="10" Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0,1,0,1" Padding="20,15"
                            Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=ViewCatalog}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border CornerRadius="8" BorderThickness="1" BorderBrush="#DDDDDD" Background="#F8F9FA" Width="300" Height="36" Margin="0,0,15,0" VerticalAlignment="Center">
                                <Grid>
                                    <TextBox x:Name="TextSearch" BorderThickness="0" Background="Transparent" Padding="15,0,40,0" FontSize="13" Foreground="#333333" Text="" VerticalContentAlignment="Center" TextChanged="TextSearch_TextChanged"/>
                                    <Button x:Name="SearchButton" Content="🔍" Background="Transparent" BorderThickness="0" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" Cursor="Hand" Click="ApplySearch_Click"/>
                                </Grid>
                            </Border>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Категория:" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="ComboFilter" Width="200" Height="36" FontSize="13" Padding="10,0" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" VerticalContentAlignment="Center" SelectionChanged="ComboFilter_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <CheckBox x:Name="ShowOnlyExpensive" Content="Дорогие (>1000₽)" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,15,0" Checked="FilterCheckBox_Checked" Unchecked="FilterCheckBox_Checked"/>
                                <CheckBox x:Name="ShowOnlyDiscount" Content="Со скидкой" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,15,0" Checked="FilterCheckBox_Checked" Unchecked="FilterCheckBox_Checked"/>
                                <CheckBox x:Name="ShowLowStockWarning" Content="Мало на складе" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Checked="FilterCheckBox_Checked" Unchecked="FilterCheckBox_Checked"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0" VerticalAlignment="Center">
                                <TextBlock Text="Сортировка:" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="ComboSort" Width="180" Height="36" FontSize="13" Padding="10,0" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" VerticalContentAlignment="Center" SelectionChanged="ComboSort_SelectionChanged">
                                    <ComboBoxItem Content="По названию (А-Я)"/>
                                    <ComboBoxItem Content="По названию (Я-А)"/>
                                    <ComboBoxItem Content="По цене (возрастание)"/>
                                    <ComboBoxItem Content="По цене (убывание)"/>
                                    <ComboBoxItem Content="По количеству на складе"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Click="ResetSearch_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" Margin="0,0,5,0"/>
                                        <TextBlock Text="Сбросить"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- MAIN LIST (catalog) - виден только авторизованным users -->
                <Border Grid.Row="2" Padding="20"
                            Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=ViewCatalog}">
                    <Grid>
                        <ListView x:Name="listProducts"
          SelectionChanged="listProducts_SelectionChanged"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          VerticalAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" Padding="15" CornerRadius="8" BorderThickness="1" BorderBrush="#EEEEEE">
                                        <Grid Height="110">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="80" Height="80" CornerRadius="4" Background="#F8F9FA" BorderThickness="1" BorderBrush="#EEEEEE" VerticalAlignment="Center">
                                                <Image Source="{Binding CurrentPhoto}" Stretch="Uniform"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding name}" FontSize="14" FontWeight="Medium" Foreground="#333333" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding description}" FontSize="11" Foreground="#666666" TextWrapping="Wrap" MaxHeight="30" TextTrimming="CharacterEllipsis" Margin="0,5,0,0"/>
                                                <Border Background="#F0F3FF" CornerRadius="12" Padding="8,3" HorizontalAlignment="Left" Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding CATEGORIES.name}" FontSize="11" Foreground="#4361EE" HorizontalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding price, StringFormat={}{0} ₽}" FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding stock_quantity, StringFormat={}На складе: {0}}" FontSize="13" Foreground="#333333" HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Action buttons: привязка к AppData.CurrentUser -->
                                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Add to cart - только клиент (role_id == 1) -->
                                                <Button Style="{StaticResource PrimaryButtonStyle}" Height="30" Padding="10,0" Margin="0,0,5,0" Click="AddToCartButton_Click"
                                                            Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=AddToCart}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="+"/>
                                                        <TextBlock Text="В корзину" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- Edit - менеджер(2) и админ(4) -->
                                                <Button Style="{StaticResource SecondaryButtonStyle}" Height="30" Width="30" Padding="0" Margin="0,0,5,0" Click="EditButton_Click" ToolTip="Редактировать"
                                                            Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=EditProduct}">
                                                    <TextBlock Text="✎"/>
                                                </Button>

                                                <!-- Delete - только админ -->
                                                <Button Style="{StaticResource SecondaryButtonStyle}" Height="30" Width="30" Padding="0" Click="DeleteButton_Click" ToolTip="Удалить" Background="#FFF0F0" BorderBrush="#FF4444"
                                                            Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=DeleteProduct}">
                                                    <TextBlock Text="🗑" Foreground="#FF4444"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Border x:Name="NoDataMessage" Visibility="Collapsed" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="Товары не найдены" FontSize="16" FontWeight="Medium" Foreground="#666666" HorizontalAlignment="Center"/>
                                <TextBlock Text="Попробуйте изменить параметры поиска или фильтры" FontSize="13" Foreground="#888888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- FOOTER: Add product (manager/admin) & statistics -->
                <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Add product visible to manager and admin -->
                        <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" Click="AddButton_Click"
                                    Visibility="{Binding Source={x:Static data:AppData.CurrentUser}, Converter={StaticResource RoleToVisibilityConverter}, ConverterParameter=AddProduct}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" Margin="0,0,5,0"/>
                                <TextBlock Text="Добавить товар"/>
                            </StackPanel>
                        </Button>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="StatisticsText" Text="Всего: 0" FontSize="13" Foreground="#666666"/>
                            <TextBlock x:Name="TextFoundCount" Text="Найдено: 0" FontSize="13" Foreground="#666666" Margin="20,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Style="{StaticResource SecondaryButtonStyle}" Width="40" Padding="0" Click="PrevPageButton_Click">
                                <TextBlock Text="«"/>
                            </Button>
                            <TextBlock Text="Страница 1 из 1" FontSize="13" Foreground="#666666" VerticalAlignment="Center" Margin="10,0"/>
                            <Button Style="{StaticResource SecondaryButtonStyle}" Width="40" Padding="0" Click="NextPageButton_Click">
                                <TextBlock Text="»"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
