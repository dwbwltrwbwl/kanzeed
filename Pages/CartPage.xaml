<Page x:Class="kanzeed.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:kanzeed.Pages"
      Title="Корзина"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- Основные стили как в DataOutput -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4361EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A56D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4361EE"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4361EE"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="White" CornerRadius="12" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="🛒 КОРЗИНА"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="Проверьте товары перед оформлением заказа"
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- LIST -->
                <ListView x:Name="CartListView"
                          Grid.Row="1"
                          BorderThickness="0"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,6"
                                    Padding="12"
                                    CornerRadius="8"
                                    BorderBrush="#EEEEEE"
                                    BorderThickness="1"
                                    Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Название -->
                                    <TextBlock Text="{Binding ProductName}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="#333"
                                               VerticalAlignment="Center"/>

                                    <!-- Количество -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Button Content="−"
                                                Width="28"
                                                Height="28"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Padding="0"
                                                Background="#F0F3FF"
                                                BorderBrush="#4361EE"
                                                Foreground="#4361EE"
                                                Click="DecreaseQty_Click"
                                                Tag="{Binding ProductId}"/>
                                        <TextBlock Text="{Binding Quantity}"
                                                   Width="30"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"/>
                                        <Button Content="+"
                                                    Width="28"
                                                    Height="28"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Padding="0"
                                                    Background="#F0F3FF"
                                                    BorderBrush="#4361EE"
                                                    Foreground="#4361EE"
                                                    Click="IncreaseQty_Click"
                                                    Tag="{Binding ProductId}"/>
                                    </StackPanel>

                                    <!-- Цена + удалить -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LineTotal, StringFormat={}{0} ₽}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,10,0"/>
                                        <Button Content="🗑"
                                                ToolTip="Удалить"
                                                Click="RemoveItem_Click"
                                                Tag="{Binding ProductId}"
                                                Background="#FFF0F0"
                                                BorderBrush="#FF4444"
                                                Foreground="#FF4444"
                                                Width="34"
                                                Height="34"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- FOOTER -->
                <Border Grid.Row="2"
                        Margin="0,15,0,0"
                        Padding="15"
                        Background="#F8F9FA"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="TotalAmountText"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                            <Button Content="Назад"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="BackButton_Click"/>
                            <Button Content="Оформить заказ"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="CheckoutButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
